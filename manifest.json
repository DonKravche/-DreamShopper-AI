{
  "manifest_version": 3,
  "name": "DreamShopper AI",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://*.amazon.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}